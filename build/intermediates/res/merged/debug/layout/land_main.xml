        android:layout_height="50dp"
        android:background="@drawable/land_button"/>

    <Button
        android:id="@+id/land_regButton"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="105dp"
